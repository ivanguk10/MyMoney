<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.home.BottomSheetIncomeFragment">

        <TextView
            android:id="@+id/valueTextViewIn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:columnCount="3"
            android:foregroundGravity="center"
            android:rowCount="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/valueTextViewIn"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/btn1In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn2In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn3In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn4In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn5In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn6In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn7In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn8In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn9In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelIn"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="Del"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="20sp"
                app:icon="@drawable/ic_delete"
                app:iconPadding="1dp"
                app:iconTint="@color/black" />


            <Button
                android:id="@+id/btn0In"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDoneIn"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:height="50dp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="20sp" />


        </GridLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:textSize="20sp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>