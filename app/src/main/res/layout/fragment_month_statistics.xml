<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_dialog"
        tools:context=".ui.statistics.WeekStatisticsFragment">

        <TextView
            android:id="@+id/monthStatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/month_statistics"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.mymoney.view.PieChart
            android:id="@+id/pieChart"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monthStatTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/january"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Jan"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/exp1Color"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/february"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Feb"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/march"
            app:layout_constraintStart_toEndOf="@+id/january"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/march"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Mar"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/april"
            app:layout_constraintStart_toEndOf="@+id/february"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/april"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Apr"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/may"
            app:layout_constraintStart_toEndOf="@+id/march"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/may"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="May"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/june"
            app:layout_constraintStart_toEndOf="@+id/april"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/june"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Jun"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/exp2Color"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/july"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Jul"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/exp1Color"
            app:layout_constraintTop_toBottomOf="@+id/january" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/august"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Aug"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/september"
            app:layout_constraintStart_toEndOf="@+id/july"
            app:layout_constraintTop_toBottomOf="@+id/january" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/september"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Sep"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/october"
            app:layout_constraintStart_toEndOf="@+id/august"
            app:layout_constraintTop_toBottomOf="@+id/january" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/october"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Oct"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/november"
            app:layout_constraintStart_toEndOf="@+id/september"
            app:layout_constraintTop_toBottomOf="@+id/january" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/november"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Nov"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/december"
            app:layout_constraintStart_toEndOf="@+id/october"
            app:layout_constraintTop_toBottomOf="@+id/january" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/december"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Dec"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/exp2Color"
            app:layout_constraintTop_toBottomOf="@+id/january" />

        <TextView
            android:id="@+id/incomeMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/income"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/expenseMonth"
            app:layout_constraintStart_toStartOf="@+id/pieChart"
            app:layout_constraintTop_toBottomOf="@+id/july" />

        <TextView
            android:id="@+id/expenseMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/expense"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/pieChart"
            app:layout_constraintStart_toEndOf="@+id/incomeMonth"
            app:layout_constraintTop_toBottomOf="@+id/july" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/incomeMonth"
            app:layout_constraintStart_toStartOf="@+id/incomeMonth"
            app:layout_constraintTop_toBottomOf="@+id/incomeMonth">

            <TextView
                android:id="@+id/incomeCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="BYN" />

            <TextView
                android:id="@+id/incomeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/expenseMonth"
            app:layout_constraintStart_toStartOf="@+id/expenseMonth"
            app:layout_constraintTop_toBottomOf="@+id/expenseMonth">

            <TextView
                android:id="@+id/expenseCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="BYN" />

            <TextView
                android:id="@+id/expenseValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exp1Color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/darkestPurple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exp2Color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/purpleDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exp3Color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/pastelBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exp2Color" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exp4Color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/pastelGreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exp2Color" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exp5Color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/pastel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exp4Color" />

        <TextView
            android:id="@+id/category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category1"
            app:layout_constraintEnd_toEndOf="@id/lin1"
            app:layout_constraintStart_toStartOf="@id/lin1"
            app:layout_constraintTop_toTopOf="@+id/exp1Color" />

        <TextView
            android:id="@+id/category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category2"
            app:layout_constraintEnd_toEndOf="@+id/lin2"
            app:layout_constraintStart_toStartOf="@+id/lin2"
            app:layout_constraintTop_toTopOf="@+id/exp2Color" />

        <TextView
            android:id="@+id/category3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category3"
            app:layout_constraintEnd_toEndOf="@id/lin3"
            app:layout_constraintStart_toStartOf="@id/lin3"
            app:layout_constraintTop_toTopOf="@+id/exp3Color" />

        <TextView
            android:id="@+id/category4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category4"
            app:layout_constraintEnd_toEndOf="@+id/lin4"
            app:layout_constraintStart_toStartOf="@+id/lin4"
            app:layout_constraintTop_toTopOf="@+id/exp4Color" />

        <TextView
            android:id="@+id/category5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category5"
            app:layout_constraintEnd_toEndOf="@id/lin5"
            app:layout_constraintStart_toStartOf="@id/lin5"
            app:layout_constraintTop_toTopOf="@+id/exp5Color" />


        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/exp1Color"
            app:layout_constraintStart_toEndOf="@+id/exp1Color"
            app:layout_constraintTop_toBottomOf="@+id/category1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="BYN" />

            <TextView
                android:id="@+id/expense1Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/exp2Color"
            app:layout_constraintEnd_toStartOf="@+id/exp2Color"
            app:layout_constraintTop_toBottomOf="@+id/category2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="BYN" />

            <TextView
                android:id="@+id/expense2Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/exp3Color"
            app:layout_constraintStart_toEndOf="@+id/exp3Color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="BYN" />

            <TextView
                android:id="@+id/expense3Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/exp4Color"
            app:layout_constraintEnd_toStartOf="@+id/exp4Color"
            app:layout_constraintTop_toBottomOf="@+id/category4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="BYN" />

            <TextView
                android:id="@+id/expense4Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/exp5Color"
            app:layout_constraintStart_toEndOf="@+id/exp5Color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="BYN" />

            <TextView
                android:id="@+id/expense5Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exp6Color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/pastelOrange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exp4Color" />

        <TextView
            android:id="@+id/category6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            app:layout_constraintEnd_toEndOf="@id/lin6"
            app:layout_constraintStart_toStartOf="@id/lin6"
            app:layout_constraintTop_toTopOf="@+id/exp6Color" />

        <LinearLayout
            android:id="@+id/lin6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/exp6Color"
            app:layout_constraintEnd_toStartOf="@+id/exp6Color"
            app:layout_constraintTop_toBottomOf="@+id/category6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="BYN" />

            <TextView
                android:id="@+id/expense6Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>